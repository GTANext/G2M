{
  "$schema": "https://schema.tauri.app/config/2.9.2",
  "productName": "g2m",
  "version": "0.1.0",
  "identifier": "com.gtamodx.manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "G2M: 可视化管理III.VC.SA的MOD/CLEO",
        "width": 1024,
        "height": 600,
        "decorations": false,
        "resizable": true,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "window": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true,
      "wix": {
        "language": ["zh-CN", "en-US"]
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["SimpChinese", "English"]
      }
    }
  }
}