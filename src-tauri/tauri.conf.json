{
  "$schema": "https://schema.tauri.app/config/2.9.2",
  "productName": "GTAModx Manager",
  "version": "0.0.1",
  "identifier": "com.gtamodx.manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "G2M:",
        "width": 1200,
        "height": 680,
        "decorations": false,
        "resizable": true,
        "visible": true,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "window": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.svg",
      "icons/logo.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true,
      "wix": {
        "language": [
          "zh-CN",
          "en-US"
        ]
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": [
          "SimpChinese",
          "English"
        ]
      }
    }
  }
}